<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.activity.QueryDetailsActivity">

    <RelativeLayout
        android:id="@+id/queryTop"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/userPic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:id="@+id/queryDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:layout_toStartOf="@id/deleteQueryBtn"
            android:layout_toEndOf="@id/userPic">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jaydev_desai"
                android:textAlignment="textStart"
                android:gravity="center_vertical|start"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/rubik_medium"
                android:layout_alignParentEnd="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/queryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dates"
                android:textAlignment="textStart"
                android:gravity="center_vertical|start"
                android:layout_below="@id/userName"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/deleteQueryBtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/queryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/lorem_ipsum"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/colorWhite"
        android:textAlignment="textStart"
        android:gravity="center_vertical|start"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/queryTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/repliesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:gravity="center_vertical|start"
        android:text="@string/replies"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/queryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/repliesListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/repliesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/replyBarLayout"
        />

    <RelativeLayout
        android:id="@+id/replyBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:elevation="-10dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/replyEdt"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:hint="@string/reply_query"
            android:textColorHint="@color/colorPrimaryLight"
            android:layout_toStartOf="@id/postReplyBtn"
            android:padding="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorText"
            android:background="@drawable/rounded_white_edittext"
            />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/postReplyBtn"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/queryReplyLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/replyTop"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/userPic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_alignParentStart="true"/>
        <RelativeLayout
            android:id="@+id/queryDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:layout_toEndOf="@id/userPic">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jaydev_desai"
                android:textAlignment="textStart"
                android:gravity="center_vertical|start"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:fontFamily="@font/rubik_medium"
                android:layout_alignParentEnd="true"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/replyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dates"
                android:textAlignment="textStart"
                android:gravity="center_vertical|start"
                android:layout_below="@id/userName"
                android:textSize="10sp"
                android:textColor="@color/colorText"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/replyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:padding="8dp"
        android:textColor="@color/colorText"
        android:textAlignment="textStart"
        android:gravity="center_vertical|start"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/replyTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/partition"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>